.stars
  .quiz-container
    #map
      #pane.column_5.offset_8
        .card.center
          .front
            .input-container
              .title
                %h1 Where in the world are we?
              = render 'answers/form'
              = link_to 'OK', "#", onclick: "$('.new_answer').submit()", class: "button", id: "submit"
              .button#next
                %p Skip

            .info-container
              #notification
              %a{href: "#", class: "flip"} See what other people thought.
          .back
            #unitdata
            %a{href: "#", class: "flip"}
              %span{class: "icon left-sign"}
      
= javascript_include_tag "quiz.js"