.skyblue
  .row.quiz-container
    #map
      #pane.column_4
        .card.center.blue
          .front
            .input-container.overlay
              .title
                %h1 Where in the UK are we?
                %p
                  %span{class: "small"} Click map to zoom.
              = render 'answers/form'
              = link_to 'OK', "#", onclick: "$('.new_answer').submit()", class: "button ok", id: "submit"
              .button#next
                %p Skip

            .info-container
              #notification
              %a{href: "#", class: "flip"} See what other people thought.
          .back
            #unitdata
            %a{href: "#", class: "flip"}
              %span{class: "icon left-sign"}

:javascript
  var options = {
    file: "uk.json",
    globe: false,
    projection: d3.geo.albers()
                  .scale(3500)
                  .rotate([4.4, 0])
                  .center([0, 55.4])
                  .translate([$("#map").width() / 3, $("#map").height() / 2]),
    scale: 3500,
    drag: false,
    transition: function() {
      changeButton("Skip");
      svg.selectAll(".unit").classed("active", function(d, i) {
        return d.properties.name === unit.properties.name;
      });
    }
  }

= javascript_include_tag "map.js"