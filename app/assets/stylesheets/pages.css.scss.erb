@mixin prefixes($property, $argument) {
  -webkit-#{$property}: $argument;
     -moz-#{$property}: $argument;
      -ms-#{$property}: $argument;
          #{$property}: $argument;
}

// GENERAL //

body {
  height: 100%;
  width: 100%;
}

.stars {
  background-image: url(<%= asset_path 'stars.jpg' %>);
  position: absolute;
  height: 100%;
  width: 100%;
}

.title h1 {
  color: white;
}

h1 {
  margin: 10px 0;
}

.quiz-container {
  position: absolute;
  height: 100%;
  left: 0;
  right: 0;
  margin: 0 auto;
}

.center {
  text-align: center;
}

span.icon {
  font-size: 32px;
}

// PANE //

div#pane {
  input {
    width: 75%;
    min-height: 35px;
    border-radius: 5px;
    margin-top: 20px;
    padding: 0 5px;

    #answer_content:active {
      border-color: steelblue;
    }
  }

  h1, a {
    color: white;
  }

  .button {
    display: inline-block;
    margin: 20px auto;
    font-weight: bold;
    text-align: center;
    background-color: steelblue;
    cursor: pointer;
  }
}

#next {
  display: none;
}

.info-container {
  display: none;
}


// CARD FLIP //

#pane {
  position: relative;
  @include prefixes(perspective, 1000);
}

.card {
  width: 100%;
  height: 100%;
  position: absolute;
  @include prefixes(transform-style, preserve-3d);
  @include prefixes(transition, 1s);

  .front, .back {
    position: absolute;
    background-color: rgba(255, 255, 255, 0.3);
    margin-top: 30px;
    // left: 20px;
    // right: 20px;
    top: 20px;
    padding: 20px 10px;
    @include prefixes(border-radius, 7px);
    @include prefixes(backface-visibility, hidden);
  }

  .front {
    // z-index: 2;
  }

  .back {
    // background-color: blue;
    width: 100%;
    @include prefixes(transform, rotateY(-180deg));
  }

  &.flipped {
    @include prefixes(transform, rotateY(180deg));
  }
}


// CHARTS //

.barchart {
  margin: 10px 0;
}

.bar {
  fill: steelblue;
}

.barlabel {
  fill: white;
  font-size: 0.8em;
}

.axis path,
.axis line {
  fill: none;
  stroke: #000;
  shape-rendering: crispEdges;
}


// EARTH //

div#map {
  height: 100%;
}

.stroke {
  fill: none;
  stroke: #000;
  stroke-width: 3px;
}

.fill {
  fill: #fff;
}

.graticule {
  fill: none;
  stroke: #777;
  stroke-width: .5px;
  stroke-opacity: .5;
}

path#globe {
  fill: lightskyblue;
}

.land {
  fill: #808080;
}

.boundary {
  fill: none;
  stroke: #fff;
  stroke-width: .5px;
}

.label {
  font-size: .5em;
}

.active {
  fill: red;
}

.correct {
  fill: #0C9b00;
}

.wrong {
  fill: saddlebrown;
}